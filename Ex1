#include <stdio.h>

int main()
{
    int v;
    printf("Insira um numero maior que 10: ");
    scanf("%d", &v);
    
    while(v!=0)
    {
        
        if (v%2==0)
        {
            printf("%d \n", v );
            v-=1;
        }
        if (v%2!=0)
        {
            v-=1;
        }
    }
    return 0;
}
